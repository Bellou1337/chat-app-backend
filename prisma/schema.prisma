generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id BigInt @id @default(autoincrement())
  username String @unique
  password String
  refreshToken String? @unique
  role Role @default(USER)
  status Status @default(OFFLINE)
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ONLINE
  OFFLINE
}
